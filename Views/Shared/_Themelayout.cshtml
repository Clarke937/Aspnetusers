<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ASPNET</title>
    <link rel="stylesheet" href="~/css/theme.css">
    <link rel="stylesheet" href="~/css/bootstrap-grid.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body class="nav-fixed">
    
    <main>
        <header class="page-header page-header-dark bg-purple pb-10">
            <div class="container">
                <div class="page-header-content">
                    <div class="row align-items-center">
                        <div class="col-6">
                            <div class="page-header-title">Dashboard de Usuarios</div>
                            <div class="page-header-subtitle">C.R.U.D Usuarios con Asp.Net Core 3.1</div>
                        </div>
                        <div class="col-6">
                            <img src="~/img/undraw-user.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <div class="container mt-n10">
            @RenderBody()
        </div>
    </main>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/fontawesome-pro.js"></script>
</body>
</html>